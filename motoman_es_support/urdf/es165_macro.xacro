<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="motoman_es165" params="prefix joint_velocities_file">
    <!-- link list -->
    <link name="${prefix}base_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
            <mesh filename="package://motoman_es_support/meshes/es/visual/base_link.stl"/>
          </geometry>
          <material name="blue">
            <color rgba="0 0 1 1"/>
          </material>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://motoman_es_support/meshes/es/collision/base_link.stl"/>
        </geometry>
        <material name="yellow">
          <color rgba="0 1 1 1"/>
        </material>
      </collision>
    </link>
    <link name="${prefix}link_1">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://motoman_es_support/meshes/es/visual/link_1.stl"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://motoman_es_support/meshes/es/collision/link_1.stl"/>
        </geometry>
        <material name="yellow"/>
      </collision>
    </link>
    <link name="${prefix}link_2">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://motoman_es_support/meshes/es/visual/link_2.stl"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://motoman_es_support/meshes/es/collision/link_2.stl"/>
        </geometry>
        <material name="yellow"/>
      </collision>
    </link>
    <link name="${prefix}link_3">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://motoman_es_support/meshes/es/visual/link_3.stl"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://motoman_es_support/meshes/es/collision/link_3.stl"/>
        </geometry>
        <material name="yellow"/>
      </collision>
    </link>
    <link name="${prefix}link_4">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://motoman_es_support/meshes/es165/visual/link_4.stl"/>
      </geometry>
      <material name="blue"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://motoman_es_support/meshes/es165/collision/link_4.stl"/>
        </geometry>
        <material name="yellow"/>
      </collision>
    </link>
    <link name="${prefix}link_5">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://motoman_es_support/meshes/es/visual/link_5.stl"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://motoman_es_support/meshes/es/collision/link_5.stl"/>
        </geometry>
        <material name="yellow"/>
      </collision>
    </link>
    <link name="${prefix}link_6">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
            <mesh filename="package://motoman_es_support/meshes/es/visual/link_6.stl"/>
          </geometry>
          <material name="black">
            <color rgba="0 0 0 1"/>
          </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://motoman_es_support/meshes/es/collision/link_6.stl"/>
        </geometry>
        <material name="black"/>
      </collision>
    </link>
    <!--

      Balancer and rod are disabled as without a mimic joint they will not update
      their pose properly, leading to MoveIt detecting collisions which cannot
      happen with the real robot (as the balancer is essentially a passive element
      and cannot come into collision with anything due to joint limits).

    <link name="${prefix}balancer_piston">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://motoman_es_support/meshes/es/visual/balancer_piston.stl"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://motoman_es_support/meshes/es/collision/balancer_piston.stl"/>
        </geometry>
        <material name="yellow"/>
      </collision>
    </link>
    <link name="${prefix}balancer_rod">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://motoman_es_support/meshes/es/visual/balancer_rod.stl"/>
        </geometry>
        <material name="blue">
          <color rgba="1 1 1 1"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://motoman_es_support/meshes/es/collision/balancer_rod.stl"/>
        </geometry>
        <material name="yellow"/>
      </collision>
    </link>
    -->
    <!-- end of link list -->

    <!-- joint list -->
    <xacro:property name="velocities" value="${xacro.load_yaml(joint_velocities_file)}" />

    <joint name="${prefix}joint_1" type="revolute">
      <origin xyz="0 0 0.450" rpy="0 0 0"/>
      <parent link="${prefix}base_link"/>
      <child link="${prefix}link_1"/>
      <axis xyz="0 0 1"/>
      <limit lower="${radians(-180)}" upper="${radians(180)}" effort="0" velocity="${radians(velocities['joint_1'])}"/>
    </joint>
    <joint name="${prefix}joint_2" type="revolute">
      <origin xyz="0.740 0 0" rpy="0 0 0"/>
      <parent link="${prefix}link_1"/>
      <child link="${prefix}link_2"/>
      <axis xyz="0 1 0"/>
      <limit lower="${radians(-130)}" upper="${radians(80)}" effort="0" velocity="${radians(velocities['joint_2'])}"/>
    </joint>
    <joint name="${prefix}joint_3" type="revolute">
      <origin xyz="1.150 0 0" rpy="0 0 0"/>
      <parent link="${prefix}link_2"/>
      <child link="${prefix}link_3"/>
      <axis xyz="0 -1 0"/>
      <limit lower="${radians(-112)}" upper="${radians(208)}" effort="0" velocity="${radians(velocities['joint_3'])}"/>
    </joint>
    <joint name="${prefix}joint_4" type="revolute">
      <origin xyz="0.250 0 0" rpy="0 0 0"/>
      <parent link="${prefix}link_3"/>
      <child link="${prefix}link_4"/>
      <axis xyz="0 0 1"/>
      <limit lower="${radians(-360)}" upper="${radians(360)}" effort="0" velocity="${radians(velocities['joint_4'])}"/>
    </joint>
    <joint name="${prefix}joint_5" type="revolute">
      <origin xyz="0 0 -1.225" rpy="0 0 0"/>
      <parent link="${prefix}link_4"/>
      <child link="${prefix}link_5"/>
      <axis xyz="0 -1 0"/>
      <limit lower="${radians(-130)}" upper="${radians(130)}" effort="0" velocity="${radians(velocities['joint_5'])}"/>
    </joint>
    <joint name="${prefix}joint_6" type="revolute">
      <origin xyz="0 0 -0.225" rpy="0 0 0"/>
      <parent link="${prefix}link_5"/>
      <child link="${prefix}link_6"/>
      <axis xyz="0 0 1"/>
      <limit lower="${radians(-360)}" upper="${radians(360)}" effort="0" velocity="${radians(velocities['joint_6'])}"/>
    </joint>

    <!--

      See earlier comment about balancer and piston.

    <joint name="${prefix}joint_balancer_piston" type="fixed">
      <origin xyz="-0.260 0 0.320" rpy="0 0 0"/>
      <parent link="${prefix}link_1"/>
      <child link="${prefix}balancer_piston"/>
    </joint>
    <joint name="${prefix}joint_balancer_rod" type="fixed">
      <origin xyz="${0.740 + 0.220 * cos(radians(55))} 0 ${0.220 * sin(radians(55))}" rpy="0 0 0"/>
      <parent link="${prefix}link_1"/>
      <child link="${prefix}balancer_rod"/>
    </joint>
    -->
    <!-- end of joint list -->

    <!-- ROS base_link to Robot Manufacturer World Coordinates transform -->
    <link name="${prefix}base" />
    <joint name="${prefix}base_link-base" type="fixed">
      <origin xyz="0 0 0.450" rpy="0 0 0"/>
      <parent link="${prefix}base_link"/>
      <child link="${prefix}base"/>
    </joint>

    <!-- ROS-Industrial 'flange' frame: attachment point for EEF models -->
    <link name="${prefix}flange"/>
    <joint name="${prefix}joint_6-flange" type="fixed">
      <origin xyz="0 0 0" rpy="0 ${radians(90)} 0"/>
      <parent link="${prefix}link_6"/>
      <child link="${prefix}flange"/>
    </joint>

    <!-- ROS-Industrial 'tool0' frame: all-zeros tool frame -->
    <link name="${prefix}tool0"/>
    <joint name="${prefix}flange-tool0" type="fixed">
      <origin xyz="0 0 0" rpy="${radians(180)} ${radians(-90)} 0"/>
      <parent link="${prefix}flange"/>
      <child link="${prefix}tool0"/>
    </joint>
    
  </xacro:macro>
</robot>
